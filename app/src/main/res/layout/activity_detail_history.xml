<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_History">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_small_header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp">

                <ImageButton
                    android:id="@+id/arrow_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="135dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_horizontal"
                    android:text="Detail History"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="148dp"
            android:layout_height="149dp"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/jumpa" />


        <TextView
            android:id="@+id/NoPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_horizontal"
            android:text="No Pesanan"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="267dp"
            android:layout_marginTop="-30dp"
            android:layout_toRightOf="@+id/NoPesanan"
            android:fontFamily="@font/poppinsregular"
            android:text="SAM01"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_horizontal"
                android:text="Tanggal"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="267dp"
                android:layout_marginTop="-30dp"
                android:layout_toRightOf="@+id/Tanggal"
                android:fontFamily="@font/poppinsregular"
                android:text="23 September 2021"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_horizontal"
                    android:text="Waktu"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="267dp"
                    android:layout_marginTop="-30dp"
                    android:layout_toRightOf="@+id/Waktu"
                    android:fontFamily="@font/poppinsregular"
                    android:text="08:00 - 11:00"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/NoPonsel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="center_horizontal"
                        android:text="No Ponsel"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="267dp"
                        android:layout_marginTop="-30dp"
                        android:layout_toRightOf="@+id/NoPonsel"
                        android:fontFamily="@font/poppinsregular"
                        android:text="08xxxxxx"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/KategoriSampah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center_horizontal"
                            android:text="Kategori Sampah"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="267dp"
                            android:layout_marginTop="-30dp"
                            android:layout_toRightOf="@+id/KategoriSampah"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Plastik"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/BeratTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="30dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:gravity="center_horizontal"
                                android:text="Berat Total"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="267dp"
                                android:layout_marginTop="-30dp"
                                android:layout_toRightOf="@+id/BeratTotal"
                                android:fontFamily="@font/poppinsregular"
                                android:text="12 kg"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/HargaTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="30dp"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:gravity="center_horizontal"
                                    android:text="Harga Total"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="267dp"
                                    android:layout_marginTop="-30dp"
                                    android:layout_toRightOf="@+id/HargaTotal"
                                    android:fontFamily="@font/poppinsregular"
                                    android:text="Rp. 36.000"
                                    android:textColor="@color/black" />

    </LinearLayout>




</LinearLayout>